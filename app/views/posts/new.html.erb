<h1>New Post Form</h1>
<hr>
<% if @author.errors.any? %>
    <ul id="error_explanation">
    <% @author.errors.full_messages.each do |m|%>
        <li><%= m %></li>
    <% end %>
    </ul>
<% end %>

<%=form_for @post do |f|%>
<div class="field">
    <h2><%= f.label "Title" %></h2>
    <%= f.text_field :title %>
    <br>
</div>
<div class="field">
    <h2><%= f.label "Category:" %></h2>
    <p>Must be either "Fiction" or "Non-Fiction".</p>
    <%= f.text_field :category %>
    <br>
</div>

<div class= "field">
    <h2><%= f.label "Content:" %></h2>
    <%= f.text_area :content %>
</div>
<br>
<br>
<%= f.submit %>

<% end %>
